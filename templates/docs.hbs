<!doctype html>
<html class="{{#is page.columns 2}}two-columns{{else}}three-columns{{/is}}">
<head>
  <meta charset='utf-8'>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width">

  <title>Particle Documentation (formerly Spark) | {{title}}</title>

  <!-- jQuery -->
  <script src="/assets/js/jquery-1.11.1.min.js"></script>

  <!-- Let me embed vines -->
  <script async src="https://platform.vine.co/static/scripts/embed.js" charset="utf-8"></script>

  <!-- Favicon -->
  <link rel="shortcut icon" href="/assets/orange.ico" type="image/x-icon" />

  <!-- Vendor theme mods -->
  <script src='/assets/js/jquery-styling.js'></script>
  <script src='/assets/js/bootstrap-dropdown.js'></script>
  <script src='/assets/js/prettify.js'></script>
  <script src='/assets/js/scrollspy.js'></script>

  <!-- Spark theme mods -->
  <link href='/assets/css/style.css' rel='stylesheet'>
  <script src='/assets/js/animated-core.js'></script>

  <!-- GOTHAM YO -->
  <link rel="stylesheet" type="text/css" href="//cloud.typography.com/6107112/665726/css/fonts.css" />

  <!-- Meta -->
  <meta content="Particle" property="og:title">
  <meta content="Documentation for Particle, a platform for connected devices." name="description">

</head>
<body role='flatdoc'>
  <div id="docs">
    <div class='header'>
      <div class='left'>
        <a href="https://www.particle.io">
          <img src="/assets/images/particle-docs.png" id="logo">
        </a>
        <div class="sections">
          <a class="nav {{#contains dirname 'guide'}}active{{/contains}}" href="/guide">Guide</a>
          <a class="nav {{#contains dirname 'reference'}}active{{/contains}}" href="/reference">Reference</a>
          <a class="nav {{#contains dirname 'datasheets'}}active{{/contains}}" href="/datasheets">Datasheets</a>
        </div>
      </div>
      <div class='right'>
        <div class="search">
          <script src='/assets/js/google-search.js'></script>
          <gcse:search></gcse:search>
        </div>
        {{#contains dirname 'guide'}}
          <div class="dropdown">
            <a id="dLabel" data-target="#" class="nav" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              {{#contains dirname 'photon'}}Photon{{/contains}}
              {{#contains dirname 'core'}}Core{{/contains}}
              <i class="icon ion-chevron-down"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="dLabel">
              <li><a href="/guide/photon/{{basename}}">Photon</a></li>
              <li><a href="/guide/core/{{basename}}">Core</a></li>
            </ul>
          </div>
        {{/contains}}
        <a href="http://support.particle.io" class="nav" target="_blank"><i class="icon ion-help-buoy"></i>Support</a>
        <a href="/assets/docs.zip" class="nav"><i class="icon ion-arrow-down-a"></i>Download</a>
        <a href='https://github.com/spark/docs/edit/master/src/content/en{{#is page.shared true}}/shared/{{else}}{{#contains dirname "photon"}}/photon/{{else}}/core/{{/contains}}{{/is}}{{basename}}.md' class="nav" target="_blank"><i class="ion-edit"></i>Edit</a>
      </div>
    </div>

    <div class='content-root' data-spy="scroll" data-target="#toc">
      <div class='menubar'>

        {{#contains dirname 'guide'}}
          {{#markdown}}
            {{> guide }}
          {{/markdown}}
        {{/contains}}

        {{#contains dirname 'reference'}}
          {{#markdown}}
            {{> reference }}
          {{/markdown}}
        {{/contains}}

        {{#contains dirname 'datasheets'}}
          {{#markdown}}
            {{> datasheets }}
          {{/markdown}}
        {{/contains}}

      </div>

      <div role='flatdoc-content' class='content'>
        {{#markdown}}
          {{> body}}
        {{/markdown}}
        <div class="code-samples">
        </div>
      </div>
    </div>

  <!-- Custom -->
  <script type="text/javascript" src="https://s3.amazonaws.com/redirect.particle.io/redirect-banner.js"></script>
  <script src='/assets/js/docs.js'></script>
  <script src='/assets/js/ga.js'></script>
</body>
</html>
